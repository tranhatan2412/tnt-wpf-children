<Window x:Class="tnt_wpf_children.Views.CreateSession"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Tạo phiên gửi trẻ" Height="500" Width="400"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent">

    <Border CornerRadius="10" Background="White" BorderBrush="#DDDDDD" BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Text="TẠO PHIÊN GỬI TRẺ" FontSize="20" FontWeight="Bold" 
                       HorizontalAlignment="Center" Foreground="{StaticResource PrimaryHueMidBrush}"/>

            <Button HorizontalAlignment="Right" VerticalAlignment="Top"
                    Style="{StaticResource MaterialDesignIconForegroundButton}"
                    Command="{Binding CloseCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Foreground="Gray">
                <materialDesign:PackIcon Kind="Close" />
            </Button>

            <!-- Search Section -->
            <StackPanel Grid.Row="1" Margin="0,20,0,0">
                <TextBlock Text="Tìm người gửi" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Nhập tên hoặc SĐT..."
                             Style="{StaticResource MaterialDesignOutlinedTextBox}">
                        <TextBox.InputBindings>
                             <KeyBinding Key="Enter" Command="{Binding SearchRelativeCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                    <Button Grid.Column="1" Margin="10,0,0,0"
                            Style="{StaticResource MaterialDesignIconButton}"
                            Command="{Binding SearchRelativeCommand}">
                        <materialDesign:PackIcon Kind="Magnify"/>
                    </Button>
                </Grid>

                <!-- Search Results (Simple List) -->
                <ListBox ItemsSource="{Binding SearchResults}" MaxHeight="100" Margin="0,5,0,0"
                         SelectedItem="{Binding SelectedRelative}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <Run Text="{Binding FullName}" FontWeight="Bold"/>
                                <Run Text=" - "/>
                                <Run Text="{Binding PhoneNumber}"/>
                            </TextBlock>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>

            <!-- Session Details -->
            <StackPanel Grid.Row="2" Margin="0,20,0,0"
                        IsEnabled="{Binding IsRelativeSelected}">
                
                <TextBlock Text="Thông tin phiên" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="#666"/>
                
                <TextBox Text="{Binding RelativeInfo}" IsReadOnly="True"
                         materialDesign:HintAssist.Hint="Người gửi đã chọn"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,0,0,15"/>

                <TextBox Text="{Binding NumberOfChildren}"
                         materialDesign:HintAssist.Hint="Số lượng trẻ"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,0,0,15"/>

                <TextBox Text="{Binding Note}"
                         materialDesign:HintAssist.Hint="Ghi chú"
                         Height="80" VerticalContentAlignment="Top"
                         TextWrapping="Wrap"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,0,0,15"/>
            </StackPanel>

            <!-- Actions -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Hủy" Style="{StaticResource MaterialDesignOutlinedButton}"
                        Command="{Binding CloseCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                         Margin="0,0,10,0"/>
                
                <Button Content="Tạo phiên" Style="{StaticResource MaterialDesignRaisedButton}"
                        Command="{Binding SaveCommand}"/>
            </StackPanel>

            <materialDesign:Snackbar MessageQueue="{Binding MessageQueue}" Grid.RowSpan="4" VerticalAlignment="Bottom"/>
        </Grid>
    </Border>
</Window>
