<Window x:Class="tnt_wpf_children.Views.ConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Thông báo" Height="200" Width="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="NoResize"
        AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Border CornerRadius="10" Background="White" BorderBrush="#DDDDDD" BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="{Binding Title}" 
                       HorizontalAlignment="Center" FontWeight="Bold" FontSize="18" 
                       Foreground="#1976D2" Margin="0,0,0,20"/>

            <TextBlock Grid.Row="1" Text="{Binding Message}" 
                       TextWrapping="Wrap" TextAlignment="Center"
                       VerticalAlignment="Center"
                       Foreground="#333333" FontSize="15" Margin="0,0,0,20"/>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                <Button Content="HỦY" 
                        Visibility="{Binding IsConfirmation, Converter={StaticResource BoolToVis}}"
                        Command="{Binding CancelCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Style="{StaticResource MaterialDesignRaisedLightButton}"
                        materialDesign:ButtonAssist.CornerRadius="5"
                        Foreground="White"
                        Margin="0,0,10,0" Width="100"/>
                
                <Button Content="XÁC NHẬN" 
                        Command="{Binding ConfirmCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Style="{StaticResource MaterialDesignRaisedSecondaryButton}"
                        materialDesign:ButtonAssist.CornerRadius="5"
                        Width="110" Background="#209757" Foreground="White"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
