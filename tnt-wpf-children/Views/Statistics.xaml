<UserControl x:Class="tnt_wpf_children.Views.Statistics"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:tnt_wpf_children.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             >
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVis"/>
    </UserControl.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        

        <Grid Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="20" Width="200">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Tổng lượt gửi" Foreground="Gray" FontSize="14"/>
                    <TextBlock Text="{Binding TotalSessions}" FontSize="28" FontWeight="Bold" Foreground="#1976D2" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Background="White" CornerRadius="10" Padding="20" Width="200">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Tổng số trẻ" Foreground="Gray" FontSize="14"/>
                    <TextBlock Text="{Binding TotalChildren}" FontSize="28" FontWeight="Bold" Foreground="#FF9800" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">
                
                <Button Style="{StaticResource MaterialDesignOutlinedButton}" 
                        Command="{Binding BackCommand}" 
                        Visibility="{Binding IsMonthView, Converter={StaticResource BooleanToVis}}"
                        Margin="0,0,20,0" ToolTip="Quay lại">
                    <materialDesign:PackIcon Kind="ArrowLeft" />
                </Button>

                <Button Style="{StaticResource MaterialDesignIconButton}" Command="{Binding PrevCommand}">
                    <materialDesign:PackIcon Kind="ChevronLeft" />
                </Button>
                
                <StackPanel Orientation="Horizontal" Margin="10,0">
                    <ComboBox ItemsSource="{Binding AvailableMonths}" 
                              SelectedItem="{Binding SelectedMonth}"
                              Visibility="{Binding IsMonthView, Converter={StaticResource BooleanToVis}}"
                              Margin="5,0"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              Padding="8,4" />
                    
                    <ComboBox ItemsSource="{Binding AvailableYears}" 
                              SelectedItem="{Binding SelectedYear}"
                              Margin="5,0"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              Padding="8,4" />
                </StackPanel>

                <Button Style="{StaticResource MaterialDesignIconButton}" Command="{Binding NextCommand}">
                    <materialDesign:PackIcon Kind="ChevronRight" />
                </Button>
            </StackPanel>
        </Grid>

        <Border Grid.Row="2" x:Name="ChartBorder" Background="White" CornerRadius="10" Padding="10">
            <Border.Effect>
                <DropShadowEffect Color="Gray" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
        </Border>
    </Grid>
</UserControl>
